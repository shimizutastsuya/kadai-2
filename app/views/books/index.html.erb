<body>
  <p id="notice"></p>
  <h1 class="Books">Books</h1>
  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'show', book_path(book.id),class: 'btn btn-block btn-white' %></td>
        <td><%= link_to 'edit', edit_book_path(book.id),class: 'btn btn-block btn-white' %></td>
        <td><%= link_to 'destroy', book_path(book.id),method: :delete,class: 'btn btn-block btn-white', data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>

  </table>

  <h2>New book</h2>
    <% if @book.errors.any? %>
      <div id="errors_container">
        <%= @book.errors.count %>errors prohibited this book from being saved:
        </br>
        <div id="errors_messages">
        <% @book.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
        </div>
      </div>
    <% end %>
    <%= form_with model:@book, local:true do |f| %>
    <div class="form">
      <h4>Title</h4>
      <%= f.text_field :title%>
      <h4>Body</h4>
      <%= f.text_area :body%>
      </br>
     <%= f.submit 'Create Book'%>
    </div>
    <% end %>
</body>